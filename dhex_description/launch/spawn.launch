<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Available Sensors -->
    <arg name="rp_lidar_a1"         default="true"/>
    <!-- <group ns="/dhex"> -->
        <!-- Robot model -->
        <param name="robot_description" command="$(find xacro)/xacro 
                                                    $(find dhex_description)/urdf/dhex.urdf.xacro
                                                    rp_lidar_a1:=$(arg rp_lidar_a1)
                                                    --inorder" />
        <arg name="x" default="0"/>
        <arg name="y" default="0"/>
        <arg name="z" default="0.1"/>
        <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
            args="-urdf -param robot_description -model dhex -x $(arg x) -y $(arg y) -z $(arg z)" />

        <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

        <!-- Controllers config -->
        <!-- <rosparam command="load" file="$(find dhex_description)/config/joints2.yaml" /> -->

        <!-- Controllers -->
        <!-- <node name="controller_spawner" pkg="controller_manager" type="spawner"
        args="joint_state_controller right_velocity_controller left_velocity_controller " /> -->

        <!-- Robot state publisher -->
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>

        <!-- <node pkg="tf" type="static_transform_publisher" name="base_wheel" args="0 0 0 0 0 1.5707 /base_link /base_wheel 100" /> -->
        
    <!-- </group> -->
</launch>